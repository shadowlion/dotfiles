// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "icon_theme": "Catppuccin Frappé",
  "features": {
    "copilot": false
  },
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "buffer_font_size": 14,
  "base_keymap": "VSCode",
  "theme": "Catppuccin Frappé",
  "show_whitespaces": "selection",
  "project_panel": {
    "dock": "right"
  },
  "wrap_guides": [80, 100, 120],
  "indent_guides": {
    "enabled": true
  },
  "inlay_hints": {
    "enabled": false
  },
  "file_types": {
    "HTML": ["tmpl", "gohtml"]
  },
  "lsp": {
    "eslint": {
      "settings": {
        "nodePath": "./node_modules/eslint"
      }
    },
    "biome": {
      "settings": {
        "require_config_file": true
      }
    }
  },
  "language_overrides": {
    "Markdown": {
      "preferred_line_length": 80,
      "soft_wrap": "preferred_line_length"
    },
    "Make": {
      "tab_size": 2,
      "hard_tabs": true
    },
    "Go": {
      "tab_size": 4,
      "indent_style": "tab",
      "preferred_line_length": 100,
      "soft_wrap": "preferred_line_length"
    },
    "HTML": {
      "tab_size": 2,
      "indent_style": "space",
      "preferred_line_length": 120,
      "soft_wrap": "preferred_line_length"
    },
    "Vue.js": {
      "tab_size": 2,
      "indent_style": "space",
      "preferred_line_length": 80,
      "soft_wrap": "preferred_line_length",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "tab_size": 2,
      "indent_style": "space",
      "preferred_line_length": 80,
      "soft_wrap": "preferred_line_length",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TSX": {
      "tab_size": 2,
      "indent_style": "space",
      "preferred_line_length": 80,
      "soft_wrap": "preferred_line_length"
    },
    "JavaScript": {
      "tab_size": 2,
      "indent_style": "space",
      "preferred_line_length": 80,
      "soft_wrap": "preferred_line_length",
      "formatter": "language_server",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Python": {
      "tab_size": 4,
      "indent_style": "space",
      "wrap_guides": [79, 80, 88],
      "preferred_line_length": 88,
      "soft_wrap": "preferred_line_length",
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "ruff check --select=I --fix --stdin-filename {buffer_path} | ruff format --stdin-filename {buffer_path}"
          ]
        }
      }
    },
    "Rust": {
      "tab_size": 4
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            // Fix all auto-fixable lint violations
            "source.fixAll.ruff": true,
            // Organize imports
            "source.organizeImports.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  }
}
